OPENROUTER_API_KEY=your_api_key_here

# Optional - customize behavior
DEFAULT_MODEL=x-ai/grok-4-fast:free        # Which AI model to use
MAX_REQUESTS_PER_MINUTE=60                    # Rate limiting
MAX_CONCURRENT_REQUESTS=5                     # Parallel requests
MAX_RETRIES=5                                 # Retry failed requests

# Logging & UI
LOG_LEVEL=INFO                                # Logging detail (DEBUG, INFO, WARNING, ERROR)
ENABLE_LOGGING=true                           # Enable/disable logging
USE_EMOJIS=true                               # Enable/disable emojis

# Conversation Management
CONVERSATION_HISTORY_LIMIT=100                # Max messages to keep in memory
AUTO_SAVE_CONVERSATIONS=true                  # Auto-save after each message
CONVERSATIONS_DIR=conversations               # Directory for saved conversations
STORAGE_TYPE=file                             # Storage type: 'file' or 'memory'

